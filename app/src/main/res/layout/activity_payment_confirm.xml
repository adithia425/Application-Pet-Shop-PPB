<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".PaymentConfirmActivity">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_payment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/backgroundpayment"
        android:backgroundTint="@color/colorBlueBCA"
        android:background="@drawable/rounded_image"
        android:scaleType="centerCrop" />

    <!-- Item pembayaran pertama -->
    <RelativeLayout
        android:id="@+id/item_payment_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_image"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_below="@id/image_payment"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon_payment_1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/iconbluebca"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/nama_payment_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue BCA"
            android:textSize="16sp"
            android:layout_toEndOf="@id/icon_payment_1"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/harga_payment_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 100.000"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_payment_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_image"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_below="@id/image_payment"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon_payment_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/logo_pawspal"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/nama_payment_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pembayaran 1"
            android:textSize="16sp"
            android:layout_toEndOf="@id/icon_payment_2"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/harga_payment_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 100.000"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_payment_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_image"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_below="@id/image_payment"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon_payment_3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/logo_pawspal"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/nama_payment_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pembayaran 1"
            android:textSize="16sp"
            android:layout_toEndOf="@id/icon_payment_3"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/harga_payment_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 100.000"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_payment_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_image"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_below="@id/image_payment"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon_payment_4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/logo_pawspal"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/nama_payment_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pembayaran 1"
            android:textSize="16sp"
            android:layout_toEndOf="@id/icon_payment_4"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/harga_payment_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 100.000"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_payment_success"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/purple"
        android:text=""
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:layout_margin="16dp" />
</LinearLayout>